<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/categoryCardView_vn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_location_vn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_location_on_black_24dp"
                tools:ignore="VectorDrawableCompat" />
            <TextView
                android:id="@+id/country_vn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/google_sans_bold"
                android:maxLines="2"
                android:layout_margin="5dp"
                android:text="Country"
                android:textColor="@color/colorWhiteDark"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_timeline_vn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:paddingRight="5dp"
                    app:srcCompat="@drawable/ic_timeline_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/cases_vn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/google_sans_medium"
                    android:text="Number of Cases: "
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/caseValue_vn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/google_sans_regular"
                    android:text="N/A"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/recoveredlabel_vn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/google_sans_medium"
                    android:text="Recoveries: "
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/recovered_vn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/google_sans_regular"
                    android:text="N/A"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_use_vnr"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:paddingRight="5dp"
                    app:srcCompat="@drawable/ic_user_24dp"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/deathslabel_vn"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/google_sans_medium"
                    android:text="Deaths: "
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/deaths_vn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/google_sans_medium"
                    android:text="N/A"
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/criticallabel_vn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/google_sans_medium"
                    android:text="Critical: "
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/critical_vn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/google_sans_medium"
                    android:text="N/A"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_exposure_vn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:paddingRight="5dp"
                    app:srcCompat="@drawable/ic_exposure_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/today_cases_vn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/google_sans_medium"
                    android:text="Today's Cases: "
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/todayCases_vn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/google_sans_medium"
                    android:text="N/A"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_exposure_todayDeaths_vn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:paddingRight="5dp"
                    app:srcCompat="@drawable/ic_exposure_black_death_24dp"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/lbtodayDeaths_vn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/google_sans_medium"
                    android:text="Today's Deaths: "
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/todayDeaths_vn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/google_sans_medium"
                    android:text="N/A"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14dp" />


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
